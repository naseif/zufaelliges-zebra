{
  "name": "zufaelliges-zebra",
  "version": "1.0.0",
  "description": "A Simple Random Number/Password Generator",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npx nyc npx ts-mocha -p ./tsconfig.json source/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naseif/zufaelliges-zebra.git"
  },
  "author": "naseif",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/naseif/zufaelliges-zebra/issues"
  },
  "homepage": "https://github.com/naseif/zufaelliges-zebra#readme",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "source/**/!(*.spec.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/_tests_/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.0",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
